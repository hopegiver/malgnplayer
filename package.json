  "repository": {
    "type": "git",
    "url": "git+https://github.com/hopegiver/malgnplayer.git"
  },
  "bugs": {
    "url": "https://github.com/hopegiver/malgnplayer/issues"
  },
  "homepage": "https://github.com/hopegiver/malgnplayer#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "browserslist": [
    "> 1%",
